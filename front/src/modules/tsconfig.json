{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*": ["../app/src/*"],
      "@modules/*": ["./src/*"],
    },
  },
  "include": [
    "src/**/*.ts", "src/**/*.tsx",
    "../app/src/**/*.ts", "../app/src/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
  ],
}

{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "./src/*"
      ],
      "@modules/*": [
        "../modules/src/*"
      ],
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "../../node_modules/*",
    "../../node_modules",
    "node_modules/*",
    "node_modules"
  ]
}
